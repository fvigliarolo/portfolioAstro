---
import ArrowRight from "./icons/ArrowRight.astro";
import projects from "../data/projects";
import Badge from "./Badge.astro";
---

<section id="projects" class="projects">
    <h3>Projects</h3>
    <ul>
        {
            projects.slice(0, 3).map(
                (project) => (
                    <li
                        onclick={`window.location.href='projects/${project.id}'`}
                    >
                        <div class="goal">
                            <span>{project.goal}</span>
                        </div>
                        <div class="project-data">
                            <p class="title">
                                {project.title} <ArrowRight class="arrow" />{" "}
                            </p>
                            <h2>{project.project_type}</h2>
                            <p class="description">{project.description}</p>
                            <ul class="tecnologies">
                                {project.tecnologies.map((tecnology) => (
                                    <Badge>{tecnology}</Badge>
                                ))}
                            </ul>
                        </div>
                    </li>
                ),
            )
        }
    </ul>
    <a href="/projects">See more projects <ArrowRight class="arrow" /> </a>
</section>

<style>
    .project-data {
        margin-left: 30px;
    }
    section {
        font-size: 0.875em; /* 14 px */
        color: #d8d8d8;
    }
    .title {
        font-size: 1.2em;
        font-weight: 500;
        text-height: 1.5em;
        display: inline-flex;
        margin-bottom: 10px;
    }
    .title .arrow {
        padding-left: 3px;
    }
    .description {
        color: #d8d8d8ba;
        letter-spacing: 1px;
        width: 90%;
        margin-top: 0;
    }
    a {
        display: inline-flex;
        text-decoration: none;
        align-items: center;
        color: #d8d8d8;
    }

    li {
        list-style: none;
        display: flex;
        flex-direction: row;
        margin: 10px auto;
    }
    li:hover {
        background-color: #1f2a4b;
        border-radius: 5px;
        cursor: pointer;
    }
    li:hover .arrow {
        padding-left: 8px;
    }
    .goal {
        margin-top: 20px;
        padding-left: 10px;
        color: #d8d8d8ba;
    }
    li:hover .title {
        color: #50cbc7;
    }
    .tecnologies {
        padding: 0;
        display: flex;
        flex-wrap: wrap;
    }
    .tecnologies li {
        padding: 2px;
        margin-right: 5px;
    }
    ul {
        padding: 0;
        margin-bottom: 15px;
    }
    a {
        font-weight: 500;
    }
    a:hover {
        color: #50cbc7;
    }
    a:hover .arrow {
        padding-left: 5px;
    }
    h2 {
        font-size: 1.1em;
        margin-top: 0;
        color: #d8d8d8ba;
        font-weight: 500;
    }
    h3 {
        display: none;
    }
    @media (max-width: 768px) {
        h3 {
            display: block;
            color: #d8d8d8;
        }
        .ul{
            color: red;
            background-color: red;
        }
    }

    @media (max-width: 1300px) {
        h3 {
            display: block;
            color: #d8d8d8;
        }
    }
</style>
