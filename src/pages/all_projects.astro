---
import projects from "../data/projects";
import ArrowLeft from "../components/icons/ArrowLeft.astro";
import Badge from "../components/Badge.astro";
---

<header>
    <a href="/"> <h2><ArrowLeft class="arrowLeft"/> Federico Vigliarolo</h2></a>
    <h1>Projects</h1>
</header>
<section id="Projects">
    <ul>
        {
            projects.map(
                (
                    project
                ) => (
                    <li>
                        <div>
                            <span></span>
                        </div>
                        <div>
                            <h3>{project.title}</h3>
                            <p>{project.description}</p>
                            <ul class="tecnologies">
                                {project.tecnologies.map((tecnology) => (
                                    <Badge>{tecnology}</Badge>
                                ))}
                            </ul>
                        </div>
                    </li>
                ),
            )
        }
    </ul>
</section>
<style>
    html,
    body {
        margin: 40px auto;
        width: 85%;
        height: 100%;
        background-color: #101c3d;
        color: #d8d8d8;
        font-family: "Onest Variable", sans-serif;
        line-height: inherit;
        font-weight: 100;
    }
    h2{
        font-weight: 300;
    }

    section {
        display: flex;
        flex-direction: column;
        align-items: center;
        letter-spacing: 1px;

    }
    li {
        list-style: none;
    }
    .tecnologies {
        padding: 0;
        display: flex;
        justify-content: center;
    }
    h1 {
        margin-bottom: 20px;
        text-align: center;
    }
    a{
        color: #50cbc7;
        text-decoration: none;

    }
    a:hover .arrowLeft{
        transform: translateX(-5px);
    }
    li:hover{
        background-color: #1f2a4b;
        border-radius: 5px;
        cursor: pointer;
        padding: 1%;
    }
    li:hover h3{
        color: #50cbc7;
    }

</style>
