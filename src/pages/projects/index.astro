---
import LayoutProjects from '../../layouts/LayoutProjects.astro'
import projects from "../../data/projects";
import ArrowLeft from "../../components/icons/ArrowLeft.astro";
import Badge from "../../components/Badge.astro";
import ArrowRight from '../../components/icons/ArrowRight.astro';
---

<LayoutProjects>
    <header>
        <a href="../"> <h2><ArrowLeft class="arrowLeft"/> Federico Vigliarolo</h2></a>
        <h1>Projects</h1>
    </header>
    <section id="Projects">
        <ul>
            {
                projects.map(
                    (
                        project
                    ) => (
                        <li>
                            <div>
                                <span></span>
                            </div>
                            <div onclick={project.extended_description != '' ? `window.location.href='./${project.id}'`: ""}>
                                <h3><a>{project.title}</a> {project.extended_description != '' ? <ArrowRight class="arrowRight"/> : ""}</h3>
                                <p>{project.description}</p>
                                <ul class="tecnologies">
                                    {project.tecnologies.map((tecnology) => (
                                        <Badge>{tecnology}</Badge>
                                    ))}
                                </ul>
                            </div>
                        </li>
                    ),
                )
            }
        </ul>
    </section>
</LayoutProjects>

<style>
    
    section {
        display: flex;
        flex-direction: column;
        align-items: center;
        letter-spacing: 1px;
    }
    .tecnologies {
        padding: 0;
        display: flex;
        justify-content: center;
    }
    li {
        list-style: none;
    }
    li:hover{
        background-color: #1f2a4b;
        border-radius: 5px;
        cursor: pointer;
    }
    li:hover h3 a{
        color: #50cbc7;
    }

    li:hover .arrowRight{
        padding-left: 3px;
        color: #50cbc7;
    }
    
    div h3{
        display: flex;
    }

    li .arrowRight{
        margin-left: 3px;
    }

    @media (max-width: 768px) {
        header{
            margin: 0;
            margin-bottom: 20px;
            padding: 0;
        }
        section {
            font-size: 0.875em; /* 14 px */
            color: #d8d8d8;
        }
        ul{
            padding: 0;
            width: 100%;
            margin: 40px 0;
        }
    }
</style>
